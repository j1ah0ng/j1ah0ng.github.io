---
interface Props {
  header?: string;
  class?: string;
}

const { header, class: divClass = '' } = Astro.props;
---

<div class={divClass}>
  {header && <strong class="list-header">{header}</strong>}
  <ul>
    <slot />
  </ul>
</div>

<style>
  .list-header {
    font-weight: 600;
    font-size: 1rem;
  }

  ul {
    margin: 0.25rem 0 0 0;
    padding-left: 1.5rem;
  }

  ul :global(li) {
    padding-top: 0.25rem;
  }
</style>
